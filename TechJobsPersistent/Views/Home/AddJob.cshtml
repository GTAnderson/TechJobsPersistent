@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="Id">Employers</label>
        <input class="form-control" />
        <select asp-for="Id" asp-items="Model.Employers"></select>
        <a asp-controller="Home" asp-action="AddEmployerViewModel" asp-route-id="@Model.Employers">Add additional employers</a>
    </div>

    <input type="submit" value="Add Job" />
</form>